<Page x:Class="Library.BookInformation"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library"
        mc:Ignorable="d"
        d:DesignHeight="450" d:DesignWidth="800"
        Title="SearchBookGuest" Height="450" Width="800"
        Background="#F5DEB3">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Thông Tin Chi Tiết Sách" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Foreground="#333" 
                   Margin="0,121,0,205" Grid.Row="1"/>

        <!-- Book Information Fields -->
        <Border Grid.Row="1" Background="White" CornerRadius="10" Padding="20" BorderBrush="#DDD" BorderThickness="1" Margin="0,175,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="249"/>
                    <ColumnDefinition Width="89*"/>
                    <ColumnDefinition Width="22*"/>
                    <ColumnDefinition Width="39*"/>
                    <ColumnDefinition Width="319*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Tên Sách:" FontWeight="Bold" Margin="5,5,5,5" Grid.Row="0" Grid.Column="0"/>
                <TextBlock x:Name="txtTitle" Grid.Row="0" Grid.Column="1" Margin="5,5,5,5" Grid.ColumnSpan="4"/>

                <TextBlock Text="Nhà Xuất Bản:" FontWeight="Bold" Margin="5,5,5,5" Grid.Row="1" Grid.Column="0"/>
                <TextBlock x:Name="txtPublisher" Grid.Row="1" Grid.Column="1" Margin="5,5,5,5" Grid.ColumnSpan="4"/>

                <TextBlock Text="Năm Xuất Bản:" FontWeight="Bold" Margin="5,5,5,5" Grid.Row="2" Grid.Column="0"/>
                <TextBlock x:Name="txtPublicationYear" Grid.Row="2" Grid.Column="1" Margin="5,5,5,5" Grid.ColumnSpan="4"/>

                <TextBlock Text="Thể Loại:" FontWeight="Bold" Margin="5,5,5,5" Grid.Row="3" Grid.Column="0"/>
                <TextBlock x:Name="txtCategory" Grid.Row="3" Grid.Column="1" Margin="5,5,5,5" Grid.ColumnSpan="4"/>

                <TextBlock Text="Số Lượng Bản Copy:" FontWeight="Bold" Margin="5,5,5,5" Grid.Row="4" Grid.Column="0"/>
                <TextBlock x:Name="txtTotalCopies" Grid.Row="4" Grid.Column="1" Margin="5,5,5,5" Grid.ColumnSpan="4"/>

                <TextBlock Text="Số Lượng Có Sẵn:" FontWeight="Bold" Margin="5,5,5,5" Grid.Row="5" Grid.Column="0"/>
                <TextBlock x:Name="txtAvailableCopies" Grid.Row="5" Grid.Column="1" Margin="5,5,5,5" Grid.ColumnSpan="4"/>

                <TextBlock Text="Giá Tiền:" FontWeight="Bold" Margin="5,5,5,5" Grid.Row="6" Grid.Column="0"/>
                <TextBlock x:Name="txtPrice" Grid.Row="6" Grid.Column="1" Margin="5,5,5,5" Grid.ColumnSpan="4"/>
            </Grid>
        </Border>

    </Grid>
</Page>
