<Page x:Class="Library.AddLoan"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library"
      mc:Ignorable="d"
      Title="AddLoan"
    Background="#F5DEB3" Height="435" Width="705">

    <Grid Margin="0,0,20,40">
        <Border Background="White" CornerRadius="10" Padding="20" Margin="110,121,85,-6">
            <TextBox IsReadOnly="True" BorderBrush="Transparent" TextWrapping="Wrap" Text="Create new loan" FontSize="25" FontWeight="Bold" Margin="135,24,45,181"  />
        </Border>
        <!-- Title Label and TextBox -->
        <Label Content="Book ID" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="131,206,0,0"/>
        <TextBox x:Name="txtBookId" HorizontalAlignment="Left" VerticalAlignment="Top" Width="282" Margin="248,210,0,0"/>


        <!-- Author Label and TextBox -->
        <Label Content="UserID" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="132,248,0,0" RenderTransformOrigin="0.337,1.648"/>
        <TextBox x:Name="txtUserId" HorizontalAlignment="Left" VerticalAlignment="Top" Width="282" Margin="248,252,0,0"/>

        <!-- Genre Label and ComboBox -->

        <!-- Publisher Label and ComboBox -->

        <!-- Publication Date Label and DatePicker -->
        <Label Content="Due Date" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="131,293,0,0" RenderTransformOrigin="0.334,0.142"/>
        <DatePicker x:Name="dpPublicationDate" HorizontalAlignment="Left" VerticalAlignment="Top" Width="282" Margin="248,293,0,0"/>

        <!-- Price Label and TextBox -->

        <!-- Add Book Button -->
        <Button Content="Loan" HorizontalAlignment="Center" VerticalAlignment="Top" Width="150" Margin="1,343,0,0" Click="LoanButton_Click"/>
    </Grid>
</Page>
